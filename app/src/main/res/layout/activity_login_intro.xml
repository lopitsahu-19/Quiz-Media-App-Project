<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".login_intro">


    <ImageView
        android:layout_width="205dp"
        android:layout_height="288dp"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="90dp"
        android:src="@drawable/book" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="45dp"
        android:textColor="#1E071B"
        android:text="Welcome to Quiz Media"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="122dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="20dp"
        android:text="isn't life is a collection of weired quizzes with no answers to half the questions"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/start_Button"
        android:layout_width="318dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="51dp"
        android:backgroundTint="#E39F3A"
        android:text="Get Started"
        android:textSize="25dp" />


</RelativeLayout>